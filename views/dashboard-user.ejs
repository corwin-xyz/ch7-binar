<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      .alert {
        position: absolute;
        width: 20rem;
        left: 0;
        right: 0;
        margin: auto;
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav class="nav d-flex justify-content-between w-100 py-2">
        <a
          class="btn btn-primary text-light text-decoration-none"
          href="/?user=<%= username %>"
          >Back</a
        >
        <a class="btn btn-secondary text-light text-decoration-none" href="/"
          >Logout</a
        >
      </nav>
    </div>
    <main>
      <div class="container py-5">
        <div class="row">
          <h1>User Profile</h1>
          <p>Hello, <%= username %></p>
          <% if(msg == 'error') { %>
          <div class="alert alert-danger" role="alert">
            Oops! please try again
          </div>
          <% } %> <% if(msg == 'updated') { %>
          <div class="alert alert-success" role="alert">Username Updated !</div>
          <% } %>
        </div>
        <div class="row">
          <div class="col">
            <div class="table-responsive">
              <table
                class="
                  table table-hover table-light table-striped
                  align-middle
                  bordered
                  my-2
                "
              >
                <thead class="table-primary text-center">
                  <tr>
                    <th>User ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if(user != "") { %>
                  <tr>
                    <th id="user_id"><%= user.user_id %></th>
                    <th><%= user.full_name %></th>
                    <th><%= user.email %></th>
                    <th class="text-center">
                      <a
                        type="button"
                        class="btn btn-warning editProfileButton"
                        data-bs-toggle="modal"
                        data-bs-target="#updateUserModal"
                        data-bs-id="<%= user.user_id %>"
                        href="../dashboard/edit/<%= user.user_id %>"
                      >
                        Update
                      </a>
                    </th>
                  </tr>
                  <% } else { %>
                  <tr>
                    <th class="text-center" colspan="4">Data still empty</th>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
  <%- include("components/update-user.ejs"); %>
  <script src="/scripts/dashboard.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"
  ></script>
</html>
